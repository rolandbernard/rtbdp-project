<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%d{YYYY-dd-MM HH:mm:ss.SSS} \(%level\)) %msg [%thread %logger{15}]%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <!-- To avoid getting flooded with warnings. See https://issues.apache.org/jira/browse/FLINK-35321 -->
    <logger name="org.apache.flink.metrics.MetricGroup" level="ERROR"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="com.rolandb" level="DEBUG"/>
</configuration>
